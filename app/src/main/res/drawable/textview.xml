<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- くぼみ -->
    <item android:width="@dimen/_100sdp">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="#102f2f2f" />
        </shape>
    </item>

    <!-- グラデーション下地 -->
    <item
        android:bottom="1sp"
        android:left="1sp"
        android:right="1sp"
        android:top="1sp"
        android:width="@dimen/_100sdp"
        >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <gradient
                android:angle="90"
                android:endColor="#272143"
                android:centerColor="#272143"
                android:startColor="#272143"
                android:type="linear" />
        </shape>
    </item>



</layer-list>