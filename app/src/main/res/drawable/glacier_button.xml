<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main button -->
    <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp" android:gravity="bottom|center_vertical">
        <shape android:shape="oval">
            <solid android:color="#F0810F" />
        </shape>
    </item>


    <item android:top="80dp" android:left="80dp" android:right="80dp" android:bottom="80dp" android:gravity="bottom|center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#F0810F" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>